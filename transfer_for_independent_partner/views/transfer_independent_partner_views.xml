<odoo>

    <record id="status_from_cron_scheduler_action_transfer_independent" model="ir.cron">
        <field name="name">Transfer Independent Scheduler</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="model_id" ref="model_stock_picking"/>
        <field name="state">code</field>
        <field name="active">1</field>
        <field name="code">model.action_transfer_independent()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
    </record>

    <record id="view_stock_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="date_deadlines" placeholder="Transfer for Independent Partners"
                       attrs="{'invisible': [('is_internal', '!=', True)], 'readonly': [('state', '!=', 'draft')]}"/>
                <field name="is_internal" invisible="1"/>
                <field name="check_internal" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
