        <record model="ir.ui.view" id="inherit_sale_order_product_extra_price_commission">
            <field name="name">sale order product extra price</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[@name='order_lines']/field[@name = 'order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="comm_extra_price" string="Unit Price"  widget='monetary' options="{'currency_field': 'currency_id'}" force_save="1"/>
                 </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_account_move_product_extra_price">
            <field name="name">saccount invoice product extra price</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                 
                 <xpath expr="//div[@name = 'journal_div']" position="after">
                  <field name="invoice_origin" string="Source Document"/>
                </xpath>
                 
                 
                <xpath expr="//field[@name = 'partner_id']" position="after">
                    <field name="referred_by" attrs="{'readonly': [('state', 'not in', ('draft'))] , 'invisible':[('move_type','=','entry')]}"/>
                </xpath>

                <xpath expr="//field[@name = 'payment_reference']" position="before">
                    <field name="invoice_ref" attrs="{'readonly': [('state', 'in', ('draft','posted','cancel'))] , 'invisible':[('move_type','!=','entry')]}"/>
                    <field name="commission_partner_id" attrs="{'readonly': [('state', 'in', ('draft','posted','cancel'))] , 'invisible':[('move_type','not in',['entry','out_invoice'])]}"/>
                    <field name = "commission_payable_total" attrs="{'invisible':[('move_type','not in',['entry'])]}" />
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="view_journal_entry"  attrs="{'invisible': [('move_type', 'in', ('entry'))]}"
                            icon="fa-money"
                            type="object">
                        <field string="Journal Entries" name="journal_entry_count" widget="statinfo"/>
                    </button>
                </xpath>


                <xpath expr="//field[@name = 'invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="string" >Extra Price</attribute>
                </xpath>
                <xpath expr="//field[@name = 'invoice_line_ids']/tree/field[@name='quantity']" position="after">
                    <field name="comm_extra_price" string="Price" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </xpath>
            </field>
        </record>
         
         
          <record id="view_tree_emplyee_je" model="ir.ui.view">
            <field name="name">account.move.emp.tree.je</field>
            <field name="model">account.move</field>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <tree string="employee Journal Entries">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="journal_id"/>
                    <field name="invoice_ref"/>
                    <field name="commission_partner_id"/>
                    <field name = "commission_payable_total" sum="total of commission payable" />
                    <field name="amount_total_signed" sum="Total Amount" string="Total" decoration-bf="1"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'"/>
                   
                </tree>
            </field>
        </record>
         
         
         
