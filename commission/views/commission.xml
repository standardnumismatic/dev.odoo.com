        <record model="ir.ui.view" id="inherit_sale_order_product_extra_price_commission">
            <field name="name">sale order product extra price</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[@name='order_lines']/field[@name = 'order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="comm_extra_price" string="Unit Price"  widget='monetary' options="{'currency_field': 'currency_id'}" force_save="1"/>
                 </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_account_move_product_extra_price">
            <field name="name">saccount invoice product extra price</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name = 'partner_id']" position="after">
                    <field name="referred_by" attrs="{'readonly': [('state', 'not in', ('draft'))] , 'invisible':[('move_type','=','entry')]}"/>
                </xpath>

                <xpath expr="//field[@name = 'payment_reference']" position="before">
                    <field name="invoice_ref" attrs="{'readonly': [('state', 'in', ('draft','posted','cancel'))] , 'invisible':[('move_type','!=','entry')]}"/>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="view_journal_entry"  attrs="{'invisible': [('move_type', 'in', ('entry'))]}"
                            icon="fa-money"
                            type="object">
                        <field string="Journal Entries" name="journal_entry_count" widget="statinfo"/>
                    </button>
                </xpath>


                <xpath expr="//field[@name = 'invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                    <attribute name="string" >Extra Price</attribute>
                </xpath>
                <xpath expr="//field[@name = 'invoice_line_ids']/tree/field[@name='quantity']" position="after">
                    <field name="comm_extra_price" string="Price" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>    