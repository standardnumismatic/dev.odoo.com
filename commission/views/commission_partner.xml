<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_independent_partner_extra_price">
            <field name="name">independent partner extra price</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="independent_partner" />
                    <!-- <field name="wealth_manager" /> -->
                </xpath>
            </field>
        </record>


